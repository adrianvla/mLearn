{
  "name": "mlearn",
  "version": "1.3.1",
  "description": "A language-learning app that knows which words you know for faster learning by immersion",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
  "start": "electron .",
  "dist": "electron-builder -mwl",
  "dist:mac": "electron-builder --mac",
  "dist:win": "electron-builder --win",
  "dist:linux": "electron-builder --linux"
  },
  "keywords": [
    "language-learning"
  ],
  "author": "Adrian Vlasov",
  "license": "MIT",
  "devDependencies": {
  "electron": "^32.1.2",
  "electron-builder": "^24.13.3"
  },
  "dependencies": {
  "devcert": "^1.2.0",
  "selfsigned": "^2.4.1",
    "python-shell": "^5.0.0",
    "tar": "^7.4.3",
    "unzipper": "^0.12.3",
    "update-electron-app": "^3.0.0",
    "ws": "^8.18.0"
  },
  "build": {
    "appId": "net.morisinc.mlearn",
    "productName": "mLearn",
  "asar": true,
    "files": [
      "main.js",
  "modules/**",
  "pages/**",
  "!dictionaries/**",
  "!languages/**",
      "node_modules/**",
      "package.json",
      "package-lock.json",
      "pip_requirements.json",
  "!server.py",
      "version-info.json",
      "!env/**",
      "!py/**",
      "!**/*.map",
      "!temp/**",
      "!**/__pycache__/**",
      "!**/*.pyc"
    ],
    "mac": {
      "target": [
        { "target": "dmg", "arch": ["universal"] },
        { "target": "zip", "arch": ["universal"] }
      ],
      "artifactName": "${productName}-${version}-${os}.${ext}",
      "category": "public.app-category.education",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] },
        { "target": "zip", "arch": ["x64"] }
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        { "target": "AppImage", "arch": ["x64"] },
        { "target": "deb", "arch": ["x64"] }
      ],
      "category": "Education",
      "icon": "build/icons"
    },
    "extraResources": [
      { "from": "languages", "to": "app/languages", "filter": ["**/*"] },
  { "from": "dictionaries", "to": "app/dictionaries", "filter": ["**/*"] },
  { "from": "server.py", "to": "app/server.py" }
    ],
    "dmg": {
      "background": "build/dmg-background.png",
  "icon": "build/icon.icns",
  "contents": [
        { "x": 140, "y": 200 },
        { "x": 660, "y": 200, "type": "link", "path": "/Applications" }
      ]
    },
    "afterPack": "scripts/afterPack.cjs"
  }
}
